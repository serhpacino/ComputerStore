@model IEnumerable<ComputerStore.Domain.Entities.ComputerComponent>

@{
    ViewBag.Title = "Admin Panel";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>List of computer components</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID</th>
                <th>Name</th>
                <th class="text-right">Price</th>
                <th class="text-center">Action</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@item.ComputerComponentId</td>
                    <td>@Html.ActionLink(item.Name, "Edit", new { item.ComputerComponentId })</td>
                    <td class="text-right">@item.Price.ToString("# zl")</td>
                    <td class="text-center">
                        @using (Html.BeginForm("Delete", "Admin"))
                        {
                            @Html.Hidden("ComputerComponentIdId", item.ComputerComponentId)
                            <input type="submit"
                                   class="btn btn-default btn-xs"
                                   value="Delete" />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Add a Component", "Create", null,
            new { @class = "btn btn-default" })
    </div>
</div>
